<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:BankingAppProjectAvaloniaDesktop.ViewModels"
        d:DesignWidth="800" d:DesignHeight="450"
        x:Class="BankingAppProjectAvaloniaDesktop.Views.TransactionResponseView"
        x:DataType="vm:TransactionResponseViewModel">
    <Grid ColumnDefinitions="Auto,Auto" 
    HorizontalAlignment="Center"
    Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" MinHeight="20" MaxHeight="100"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.ColumnSpan="2" Grid.Row="0" 
        VerticalAlignment="Center" HorizontalAlignment="Center" 
        FontSize="24"
        Text="{Binding TransactionResponse}"/>

        <TextBlock Grid.Column="0" Grid.Row="1" 
        VerticalAlignment="Center" 
        Margin="6" 
        Text="{Binding Message}"/>

        <Button Grid.ColumnSpan="2" Grid.Row="4" 
        VerticalAlignment="Center" HorizontalAlignment="Center" 
        Margin="0,6,0,35" 
        Command="{Binding GoToMainMenuViewCommand}"
        Content="Return to Main Menu"/>
    </Grid>
</UserControl>
