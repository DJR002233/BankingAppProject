<UserControl xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:BankingAppProjectAvaloniaDesktop.ViewModels"
    d:DesignWidth="800" d:DesignHeight="450"
    x:Class="BankingAppProjectAvaloniaDesktop.Views.MainMenuView"
    x:DataType="vm:MainMenuViewModel"
    xmlns:components="using:BankingAppProjectAvaloniaDesktop.Views.Components">
    <Grid ColumnDefinitions="*" RowDefinitions="*">
        <Grid ColumnDefinitions="Auto,Auto" 
        HorizontalAlignment="Center"
        Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" MinHeight="20" MaxHeight="50"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.ColumnSpan="2" Grid.Row="0" 
        VerticalAlignment="Center" HorizontalAlignment="Center" 
        FontSize="24"
        Text="Bank Account"/>

        <TextBlock Grid.ColumnSpan="2" Grid.Row="1" 
        VerticalAlignment="Center" HorizontalAlignment="Center" 
        Margin="30" FontSize="24"
        Text="{Binding BankBalanceCurrency, StringFormat='{}{0}', FallbackValue='$0.00'}"/>

        <Button Grid.Column="0" Grid.Row="2" 
        VerticalAlignment="Center" HorizontalAlignment="Center" 
        Margin="20" 
        Command="{Binding GoToTransactionFormViewCommand}"
        CommandParameter="Withdraw"
        Content="Withdraw"/>

        <Button Grid.Column="1" Grid.Row="2" 
        VerticalAlignment="Center" HorizontalAlignment="Center" 
        Margin="20" 
        Command="{Binding GoToTransactionFormViewCommand}"
        CommandParameter="Deposit"
        Content="Deposit"/>

        <Button Grid.Column="1" Grid.Row="3" 
        VerticalAlignment="Bottom" HorizontalAlignment="Right" 
        Margin="35" 
        Command="{Binding GoToLoginViewCommand}"
        Content="Log Out"/>
        </Grid>
    <components:LoadingOverlay IsActive="{Binding loadingOverlay.IsLoading}" LoadingText="{Binding loadingOverlay.LoadingMessage}"/>
    </Grid>
</UserControl>
