<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:BankingAppProjectAvaloniaDesktop.ViewModels"
        xmlns:converter="using:BankingAppProjectAvaloniaDesktop.Converters"
        d:DesignWidth="800" d:DesignHeight="450"
        x:Class="BankingAppProjectAvaloniaDesktop.Views.CreateAccountView"
        x:DataType="vm:CreateAccountViewModel">

    <UserControl.Resources>
        <converter:PasswordsConverter x:Key="PasswordsConverter"/>
    </UserControl.Resources>

    <Grid ColumnDefinitions="Auto,Auto" 
    HorizontalAlignment="Center"
    Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" MinHeight="20" MaxHeight="100"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="125"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.ColumnSpan="2" Grid.Row="0" 
        VerticalAlignment="Center" HorizontalAlignment="Center" 
        FontSize="24"
        Text="Create Account"/>

        <TextBlock Grid.Column="0" Grid.Row="1" 
        VerticalAlignment="Center" 
        Margin="6" 
        Text="Name:"/>
        <TextBox Grid.Column="1" Grid.Row="1" 
        MinWidth="150" MaxWidth="300" 
        Margin="6" 
        Watermark="Enter Name"  Text="{Binding Name}"/>

        <TextBlock Grid.Column="0" Grid.Row="2" 
        VerticalAlignment="Center" 
        Margin="6" 
        Text="E-mail:"/>
        <TextBox Grid.Column="1" Grid.Row="2" 
        MinWidth="150" MaxWidth="300" 
        Margin="6" 
        Watermark="Enter E-mail" Text="{Binding Email}"/>

        <TextBlock Grid.Column="0" Grid.Row="3" 
        VerticalAlignment="Center" 
        Margin="6" 
        Text="Password:"/>
        <TextBox Grid.Column="1" Grid.Row="3" 
        MinWidth="150" MaxWidth="300" 
        Margin="6" PasswordChar="*"
        x:Name="PasswordBox" Watermark="Enter Password"/>

        <TextBlock Grid.Column="0" Grid.Row="4" 
        VerticalAlignment="Center" 
        Margin="6" 
        Text="Re-enter Password:"/>
        <TextBox Grid.Column="1" Grid.Row="4" 
        MinWidth="150" MaxWidth="300" 
        Margin="6" PasswordChar="*"
        x:Name="RePasswordBox" Watermark="Re-enter Password"/>

        <Button Grid.ColumnSpan="2" Grid.Row="5" 
        VerticalAlignment="Center" HorizontalAlignment="Center" 
        Margin="15" 
        Command="{Binding CreateAccountCommand}"
        Content="Create Account">
            <Button.CommandParameter>
                <MultiBinding Converter="{StaticResource PasswordsConverter}">
                    <Binding Path="Text" ElementName="PasswordBox"/>
                    <Binding Path="Text" ElementName="RePasswordBox"/>
                </MultiBinding>
            </Button.CommandParameter>
        </Button>

        <Button Grid.ColumnSpan="2" Grid.Row="6" 
        VerticalAlignment="Center" HorizontalAlignment="Center" 
        Margin="0,6,0,35" 
        Command="{Binding GoToLoginViewCommand}"
        Content="Back"/>
    </Grid>
</UserControl>
