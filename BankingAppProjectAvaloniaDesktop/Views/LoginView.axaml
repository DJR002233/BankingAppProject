<UserControl xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:BankingAppProjectAvaloniaDesktop.ViewModels"
    d:DesignWidth="800" d:DesignHeight="450"
    x:Class="BankingAppProjectAvaloniaDesktop.Views.LoginView"
    xmlns:components="using:BankingAppProjectAvaloniaDesktop.Views.Components"
    x:DataType="vm:LoginViewModel">
    <Grid ColumnDefinitions="*" RowDefinitions="*">
        <Grid ColumnDefinitions="Auto,Auto" 
            HorizontalAlignment="Center"
            Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" MinHeight="20" MaxHeight="100"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.ColumnSpan="2" Grid.Row="0" 
            VerticalAlignment="Center" HorizontalAlignment="Center" 
            FontSize="24"
            Text="Banking App"/>

            <TextBlock Grid.Column="0" Grid.Row="1" 
            VerticalAlignment="Center" 
            Margin="6" 
            Text="E-mail:"/>
            <TextBox Grid.Column="1" Grid.Row="1" 
            MinWidth="150" MaxWidth="300" 
            Margin="6" 
            Watermark="Enter E-mail" Text="{Binding Email}"/>

            <TextBlock Grid.Column="0" Grid.Row="2" 
            VerticalAlignment="Center" 
            Margin="6" 
            Text="Password:"/>
            <TextBox Grid.Column="1" Grid.Row="2" 
            MinWidth="150" MaxWidth="300" 
            Margin="6" PasswordChar="*"
            x:Name="PasswordBox" Watermark="Enter Password"/>

            <Button Grid.ColumnSpan="2" Grid.Row="3" 
            VerticalAlignment="Center" HorizontalAlignment="Center" 
            Margin="15" 
            Command="{Binding GoToMainMenuViewCommand}"
            CommandParameter="{Binding #PasswordBox}"
            Content="Login"/>

            <TextBlock Grid.ColumnSpan="2" Grid.Row="4" 
            VerticalAlignment="Center" HorizontalAlignment="Center" 
            Margin="6" 
            Text="or"/>

            <Button Grid.ColumnSpan="2" Grid.Row="5" 
            VerticalAlignment="Center" HorizontalAlignment="Center" 
            Margin="0,15,0,35" 
            Command="{Binding GoToCreateAccountViewCommand}"
            Content="Create an account"/>
        </Grid>
        <components:LoadingOverlay IsActive="{Binding loadingOverlay.IsLoading}" LoadingText="{Binding loadingOverlay.LoadingMessage}"/>
    </Grid>
</UserControl>
